# file located at /etc/nginx/sites-available/default
# cp ./default /etc/nginx/sites-available/default
# sudo nginx -s reload

server {
    listen 80 default_server;
    server_name localhost;
    error_page 404  /404.html;
    root /usr/share/nginx/html;
    location /water/ {
        proxy_pass http://127.0.0.1:4040/;
        proxy_set_header Host  $http_host;
        proxy_set_header X-Real-IP  $remote_addr;
        proxy_set_header X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header X-Nginx-proxy true;
        proxy_redirect off;
    }
    location / {
      root /usr/share/nginx/html;
    }
}

server {
    server_name 42.gaoryrt.com; # managed by Certbot
    error_page 404  /404.html;
    location /water/ {
        proxy_pass http://127.0.0.1:4040/;
        proxy_set_header Host  $http_host;
        proxy_set_header X-Real-IP  $remote_addr;
        proxy_set_header X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header X-Nginx-proxy true;
        proxy_redirect off;
    }
    location /c/ {
        proxy_pass http://127.0.0.1:4040/;
        proxy_set_header Host  $http_host;
        proxy_set_header X-Real-IP  $remote_addr;
        proxy_set_header X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header X-Nginx-proxy true;
        proxy_set_header Access-Control-Allow-Origin "https://gaoryrt.com";
        proxy_set_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
        proxy_set_header 'Access-Control-Allow-Headers' 'Origin, X-Requested-With, Content-Type, Accept';
        proxy_redirect off;
    }
    location / {
      root /usr/share/nginx/html;
    }
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/42.gaoryrt.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/42.gaoryrt.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}



server {
    if ($host = 42.gaoryrt.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80 ;
    server_name 42.gaoryrt.com;
    return 404; # managed by Certbot


}
